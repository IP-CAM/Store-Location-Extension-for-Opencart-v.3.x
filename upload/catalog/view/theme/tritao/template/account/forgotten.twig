
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible mb-3"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
       <div id="forgotten"></div>

      <p>{{ text_email }}</p>
      <form method="post" id="modal_forgotten">
          <div class="form-group required">
            <div class="col-sm-12">
              <input type="text" name="email"  placeholder="{{ entry_email }}" id="input-email" class="form-control" />
            </div>
          </div>
        <div class="buttons clearfix">
          <div class="float-right">
            <!--<input type="submit" value="{{ button_continue }}" class="btn btn-primary" />-->
	<button type="button" id="button-recover" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_continue }}</button>

          </div>
        </div>
      </form>
 <script type="text/javascript"><!--
 
$('#button-recover').on('click', function() {
	$.ajax({
		url: 'index.php?route=account/forgotten/recover',
		type: 'post',
		dataType: 'json',
		data: $('#modal_forgotten').serialize(),
		//data: "email_recover="+$('#input-email').val(),
		beforeSend: function() {
			$('#button-recover').button('loading');
		},
		complete: function() {
			$('#button-recover').button('reset');
		},
		success: function(json) {
			$('.alert-dismissible').remove();
			if (json['error']) {
				$('#forgotten').after('<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> ' + json['error'] + '</div>');
			}
			if (json['success']) {
				$('#forgotten').after('<div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> ' + json['success'] + '</div>');
				$('input[name=\'email\']').val('');
				
			}
		}
	});
});
//--></script>  
