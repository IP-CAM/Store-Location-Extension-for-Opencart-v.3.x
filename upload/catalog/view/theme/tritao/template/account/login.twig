{{ header }}
<div id="account-login" class="container">
     {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}
    <div class="row-fluid">
        <div class=" pt-4 pb-4">
            <h1 class="titulo cor-secundaria">Identificação <small>Faça o seu login ou crie uma conta caso ainda não possua cadastro</small> </h1>
        </div>
    </div>
    <div class="row">{{ column_left }}
        <div id="content" class="col">{{ content_top }}
            <div class="row">
                <div class="col-sm-6">
                    <div class="card mb-3 border-color-top">
                        <div class="card-body">
                            <h2><i class="fas fa-user"></i> {{ text_returning_customer }}</h2>
                            {% if social_login %}
				{{ social_login }}
			{% endif %}
                            <form action="{{ action }}" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label for="input-email" class="col-form-label col-sm-2">{{ entry_email }}</label> 
                                    <div class="col-sm-10">
                                        <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control"/>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="input-password" class="col-form-label col-sm-2">{{ entry_password }}</label> 
                                    <div class="col-sm-10">
                                        <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control"/> 
                                        <button type="submit" class="btn btn-primary">{{ button_login }}</button>
                                    </div>
                                    <!--<a href="{{ forgotten }}" class="forgotten-password">{{ text_forgotten }}</a>-->
										{{ text_forgotten }}
                                </div>
                                {% if redirect %}
                                    <input type="hidden" name="redirect" value="{{ redirect }}"/>
                                {% endif %}
                            </form>
                        </div>
                    </div>
                </div>   
                <div class="col-sm-6">
                    <div class="card mb-3 border-color-top">
                        <div class="card-body">
                            <h2><i class="far fa-edit"></i> {{ text_new_customer }}</h2>
                            <p><strong>{{ text_register }}</strong></p>
                            <p>{{ text_register_account }}</p>
                            <a href="{{ register }}" class="btn btn-primary float-right mt-1 mb-4">{{ button_continue }}</a>
                        </div>
                    </div>
                </div>

            </div>
            {{ content_bottom }}</div>
        {{ column_right }}</div>
</div>
{{ footer }}
