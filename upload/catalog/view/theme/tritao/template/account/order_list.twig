{{ header }}
 {% include 'tritao/template/common/breadcrumbs.twig' %}
<div id="account-order" class="container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
  <div class="account-order"> 
   {{ nav_tabs }}
    <div class="account-content"> 
	 {% if last_orders %} <h3> Último Pedido <small> Número: #  {{ last_order_id }} {% endif %}</small> </h3>
	 <div class="row">
	  {% if orders %}
	 <div class="col-lg-6 col-md-12 col-sm-12">
                            <fieldset>
                                <legend><i class="fas fa-shopping-cart"></i> Dados do pedido</legend>
                                <div class="card">
                                     <ul>
									  {% if last_orders %}
                                   {% for last_order in last_orders %}
                                    <li><b>Situação:</b> <span>{{ last_order.status }}</span></li>
                                    <li><b>Data do Pedido:</b> <span>{{ last_order.date_added }}</span></li>
                                    <li><b>Valor:</b> <span>{{ last_order.total }}</span></li>
									{% endfor %}
									 {% endif %}
                                    </ul>
                                </div>
                            </fieldset>
                            <div class="text-right">
                                <div class="col-sm-12 pr-0 pl-0">
                                    <a href="{{ last_view }}" class="btn btn-outline-primary float-right btn-sm"><i class="fas fa-eye"></i> Visualizar pedido completo</a>

                                </div>
                            </div>
                        </div>
     
	   <div class="col-lg-6 col-md-12 col-sm-12">
                            <fieldset>
                                <legend><i class="fas fa-map-marker-alt"></i> Dados da entrega</legend>
                                <div class="card">
                                     <ul>
									 <li><b>Destinatário:</b> <span>{{ firstname }}</span></li>
                                    <li><b>Endereço:</b> <span>{{ address_1 }}</span></li>
                                     <li><b>CEP:</b> <span>{{ postcode }}</span></li>
                                    </ul>
                                </div>
                            </fieldset>
                         </div>

	  </div>
	   <div class="row">
	  	<div class="col-md-12 col-sm-12">
        <div class="mt-4 pt-5 ">
        <h3>Pedidos realizados na loja:</h3>
        <fieldset>
		<div class="table-responsive">
        <table class="table  table-hover">
          <thead>
            <tr>
              <td class="text-center"><b>{{ column_order_id }}</b></td>
              <td class="text-center"><b>{{ column_status }}</b></td>
              <td class="text-center"><b>{{ column_total }}</b></td>
              <td class="text-center"><b>{{ column_date_added }}</b></td>
            </tr>
          </thead>
          <tbody>
           {% for order in orders %}
            <tr>
              <td class="text-center"><a href="{{ order.view }} ">#{{ order.order_id }} </a></td>
              <td class="text-center">{{ order.status }}</td>
              <td class="text-center">{{ order.total }}</td>
              <td class="text-center">{{ order.date_added }}</td>
              <!--<td class="text-right"><a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info"><i class="fa fa-eye"></i></a></td>-->
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>


                                        </fieldset>

                                </div>
                            </div>   
                        </div> 
						
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% else %}
	  <div class="col-sm-12">
      <p class="text-center pt-4 mt-4">{{ text_empty }}</p>
	  </div>
      {% endif %}
      </div>
      </div>
      <div class="text-right">
        <div class="col-sm-12 pr-0 mt-4"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
</div>
{{ footer }}
