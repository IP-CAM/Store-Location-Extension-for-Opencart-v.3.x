{{ header }}
 {% include 'tritao/template/common/breadcrumbs.twig' %}
<div id="account-address" class="container">
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
	  <div class="account-address"> 
      {{ nav_tabs }}
      <div class="account-content"> 
          <h3> {{ text_cnpj }} </h3>

	    <fieldset>
                                <legend><i class="fa fa-list"></i> {{ entry_default }}</legend>
                                <div class="card">
                                    <ul>
                                        {% if companies %}
                                            {% for company in companies %}
                                                {% if company.company_id == default_company %}
                                                    <li><b>Razão social:</b> <span>{{ company.razao_social }}</span></li>
                                                    <li><b>Nome fantasia:</b> <span>{{ company.nome_fantasia }}</span> <b>CNPJ:</b> <span> {{ company.cnpj }}</span> <b>IE:</b> <span> {{ company.ie }}</span></li>
                                                    <li><b>Responsável juridico</b> <span>{{ company.responsavel }}</span></li>
                                                     <li><b>Endereço:</b> <span>{{ company.rua }}</span></li>
                                                     <li><b>Bairro:</b> <span>{{ company.bairro }}</span> <b>Cidade:</b> <span> {{ company.cidade }}</span></li>
                                                     <li><b>CEP:</b> <span>{{ company.cep }}</span></li>
                                                    <li><b>País:</b> <span>{{ company.country }}</span></li>
                                                     {% else %}
                                            <p>{{ text_no_results }}</p>
                                                    {% endif %}
                                                {% endfor %}
                                           
                                        {% endif %}
                                    </ul>
                                </div>
                               {% if addresses %}
                                <div class="text-right">
                                    <div class="col-sm-12 pr-0 pl-0">
                                        <a href="{{ update }}" class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit"></i> Editar Endereço</a>
                                    </div>
                                </div> 
                               {% endif %} 
                            </fieldset>      
			    <div class="col-md-12 col-sm-12">
                            <div class="account-conten-address">
                                <h3>{{ text_other_cnpj }} </h3>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <fieldset>
                                            <legend class="cor-secundaria">
                                                <i class="fas fa-map-marker-alt"></i>
                                                {{ text_cpnj_adicional }}
                                                <a href="{{ add }}" class="float-right"><i class="fas fa-plus"></i> Adicionar novo CNPJ</a>
                                            </legend>

                                            {% if companies %}
                                                <div class="row">
                                                    {% for company in companies %}
                                                         {% if company.company_id != default_company %}
                                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                                        <ul class="card">
                                                        <li><b>Razão social:</b> <span>{{ company.razao_social }}</span></li>
                                                        <li><b>Nome fantasia:</b> <span>{{ company.nome_fantasia }}</span> <b>CNPJ:</b> <span> {{ company.cnpj }}</span> <b>IE:</b> <span> {{ company.ie }}</span></li>
                                                        <li><b>Responsável juridico</b> <span>{{ company.responsavel }}</span></li>
                                                        <li><b>Endereço:</b> <span>{{ company.rua }}</span></li>
                                                        <li><b>Bairro:</b> <span>{{ company.bairro }}</span> <b>Cidade:</b> <span> {{ company.cidade }}</span></li>
                                                        <li><b>CEP:</b> <span>{{ company.cep }}</span></li>
                                                        <li><b>País:</b> <span>{{ company.country }}</span></li>
                                                            </ul>
                                                            <div class="text-right">
                                                                <div class="col-sm-12 pr-0 pl-0">
                                                                        <a href="{{ company.delete }}" class="btn btn-outline-danger btn-sm mr-2">{{ button_delete }}</a>
                                                                        <a href="{{ company.update }}" class="btn btn-outline-primary btn-sm"><i class="fas fa-edit"></i> {{ text_cnpj }}</a>
                                                                
                                                                </div>
                                                            </div> 
                                                        </div> 
                                                         {% endif %} 
                                                    {% endfor %}
                                                </div>
                                            {% else %}
                                                <p>{{ text_no_results }}</p>
                                            {% endif %}


                                        </fieldset>
                                    </div>
                                </div>
                            </div>   
                        </div>  

	  </div>
	  </div>
	   <div class="text-right">
        <div class="col-sm-12 pr-0"><a href="{{ back }}" class="btn btn-outline-secondary">{{ button_back }}</a></div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
<style>
 .account-content .card ul li {
    margin: 0px !important;
}   
</style>
    <script>
    $(function() {
  $("#accordion").click(function() {
          $(".details").show("slow");
     });
});
    </script>    
{{ footer }}
