{{ header }}
<div id="product-category" class="container">
   {% include 'tritao/template/common/breadcrumbs.twig' %}
    <div class="row">{{ column_left }}
        <div id="content" class="col">{{ content_top }}

            {% if thumb or description %}
                <div class="row"> {% if thumb %}
                    <div class="col-sm-2"><img src="{{ thumb }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-thumbnail"/></div>
                    {% endif %}
                    {% if description %}
                    <div class="col-sm-10">{{ description }}</div>
                {% endif %}</div>
            <hr>
            {% endif %}
            {% if categories %}
            <div id="display-control" class="row">
                <div class="col-12 mb-3">
            <h3 style="display: none">{{ text_refine }}</h3>
            {% if categories|length <= 5 %}
            <div class="row" style="margin-top:10px;">
              <div class="col-sm-3">
                <ul>
                  {% for category in categories %}
                  <li><a href="{{ category.href }}">{{ category.name }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
            {% else %}
            <div class="row">{% for category in categories|batch((categories|length / 4)|round(1, 'ceil')) %}
              <div class="col-sm-3">
                <ul>
                  {% for child in category %}
                  <li><a href="{{ child.href }}">{{ child.name }}</a></li>
                  {% endfor %}
                </ul>
              </div>
              {% endfor %}
            </div>
            <br />
            {% endif %}
        </div>
    </div>
        {% endif %}
    {% if products %}
        <div class="col-md-2 col-sm-6 hidden-xs">
          <div class="btn-group btn-group-sm">
            <button type="button" id="list-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
            <button type="button" id="grid-view" class="btn btn-default" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
          </div>
        </div>
                    <div id="display-control" class="row">
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <div class="total-products d-none d-md-inline">
                                    <p><span>{{ count_category }}</span> produtos encontrados.</p>
                                </div>
                                <div class="product-sorting d-flex col-lg-3 col-md-3 col-sm-6 pr-0 pl-0">
                                    <div class="input-group ">
                                        <select id="input-sort" class="form-control" onchange="location = this.value;" title="{{ text_sort }}">
                                            {% for sorts in sorts %}
                                                {% if sorts.value == '%s-%s'|format(sort, order) %}
                                                    <option value="{{ sorts.href }}" selected="selected">{{ sorts.text }}</option>
                                                {% else %}
                                                    <option value="{{ sorts.href }}">{{ sorts.text }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                            </div>     
                        </div>
                    </div>
                    <div class="row">
                        {% for product in products %}
                            <div class="product-layout product-list col-xs-12" data-wow-duration="1s" data-wow-delay="100ms" style="visibility: visible; animation-duration: 1s; animation-delay: 100ms; animation-name: fadeInUp;">
                                <div class="product-thumb transition">
                                    <div class="image"><a href="{{ product.href }}" ><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-fluid" /></a></div>
                                    <div class="caption">
                                        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                                        <div class="description">{{ product.description }}</div>
                                        {% if product.rating %}
                                       <div class="rating">
                                        {% for i in 1..5 %}
                                        {% if product.rating < i %}
                                        <span class="fas fa-stack"><i class="fas fa-star-o fa-stack-2x"></i></span>
                                         {% else %}
                                        <span class="fas fa-stack"><i class="fas fa-star fa-stack-2x"></i><i class="fas fa-star-o fa-stack-2x"></i></span>
                                       {% endif %}
                                       {% endfor %}
                                         </div>
                                        {% endif %}
                                        {% if product.price %}
                                            <p class="price">
                                                {% if not product.special %}
                                                    {{ product.price }}
                                                {% else %}
                                                    <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                                                {% endif %}
                                                {% if product.tax %}
                                                    <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                                                {% endif %}
                                            </p>
                                        {% endif %}
                                    </div>
                                    <div class="buttons-wrapper">
                                        <div class="button-group">
                                            <div class="cart-button">
                                                {% if  product.quantity < 1  %}
                                                <span class="out-of-stock"> Produto sem estoque</span>
                                                {% elseif product.price %}
                                                {% if vendedor < 30 %}
                                                <a class="btn btn-primary" onclick="cart.add('{{ product.product_id }}');"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ button_cart }}</span></a>
                                               
                                                {% endif %}
                                                {% if vendedor %}
                                                <a href="/acessar" class="login-price"> Disponível</a>
                                                {% endif %}                                                {% else %} 
                                                {% if product.quantity >= 1 %}
                                               <a href="/acessar" class="login-price"> Faça login para visualizar os preços</a>
                                                {% else %} 
                                                <span class="out-of-stock"> Produto sem estoque</span>
                                                {% endif %}
                                                {% endif %}
                                              </div>
                                           </div>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-sm-6 text-left">{{ pagination }}</div>
                        <div class="col-sm-6 text-right">{{ results }}</div>
                    </div>
                {% endif %}
                {% if not categories and not products %}
                <div class="mt-5 pt-5 text-center">
                    <p>{{ text_no_results }}</p>
                    <div class="d-inline-block pt-2 pd-2 w-100">
                        <div class="float-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
                    </div>
                </div>
                {% endif %}
                {{ content_bottom }}
            </div>
            {{ column_right }}
        </div>
    </div>
    {{ footer }}
