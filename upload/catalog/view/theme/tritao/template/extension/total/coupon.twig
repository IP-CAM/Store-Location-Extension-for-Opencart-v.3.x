   <div class="input-group">
      <label class="col-form-label pr-2" for="input-coupon">{{ entry_coupon }}</label>
        <input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control  col-md-2" />
        <span class="input-group-append">
        <input type="button" value="{{ button_coupon }}" id="button-coupon" data-loading-text="{{ text_loading }}"  class="input-group-text btn btn-primary" />
        </span>
		<div class="error-coupon col-md-6"></div> 
		</div>
		
      <script type="text/javascript"><!--
$('#button-coupon').on('click', function() {
	$.ajax({
		url: 'index.php?route=extension/total/coupon/coupon',
		type: 'post',
		data: 'coupon=' + encodeURIComponent($('input[name=\'coupon\']').val()),
		dataType: 'json',
		beforeSend: function() {
			$('.coupon-info').addClass('loading');

		},
		complete: function() {
			$('.coupon-info').removeClass('loading');
		},
		success: function(json) {
			$('.alert-dismissible').remove();

			if (json['error']) {
				$('.error-coupon').append('<div class="alert alert-danger alert-dismissible mb-0"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + '<button type="button" class="close" data-dismiss="alert">&times;</button></div>');

				//$('html, body').animate({ scrollTop: 0 }, 'slow');
			}

			if (json['redirect']) {
				location = json['redirect'];
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});
//--></script>
   
