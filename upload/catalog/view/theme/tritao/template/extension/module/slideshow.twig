<div id="banner-top" class="carousel-nav-{{ module }}">
      {% for banner in banners %}
      <div>{% if banner.link %}<a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid" /></a>{% else %}<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-fluid" />{% endif %}</div>
      {% endfor %}
</div>
<style>
.slick-slider .slick-arrow.slick-next {
    right: calc((100% - 1170px) / 2)!important;
}
.slick-slider .slick-arrow {
    background: #fff;
    width: 29px;
    height: 42px;
    -webkit-border-radius: 5px;
    -khtml-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
    border-radius: 5px;
}
.slick-slider .slick-arrow.slick-prev {
    left: calc((100% - 1170px) / 2) !important;
}
.slick-slider .slick-arrow {
    background: #fff;
    width: 29px;
    height: 42px;
    -webkit-border-radius: 5px;
