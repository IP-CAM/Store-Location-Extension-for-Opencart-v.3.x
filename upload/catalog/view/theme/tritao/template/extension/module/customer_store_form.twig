    
      <form method="post" enctype="multipart/form-data" id="modal_store">
        <div id="result"></div>
        <div class="form-group row required">
        <label class="col-sm-2 col-form-label" for="input-url">URL</label>
        <div class="col-sm-10">
        <input type="url" name="url" value="https://" id="input-url" class="form-control" required="">
        </div>
        </div>
     
    </form>
    <div class="buttons clearfix">
        <div class="float-right">
  <button type="button" id="button-add-store" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_continue }}</button>
        </div>
</div>
   
<script type="text/javascript"><!--
 
 $('#button-add-store').on('click', function() {
     $.ajax({
         url: 'index.php?route=extension/module/customer_store/addStore',
         type: 'post',
         dataType: 'json',
         data: $('#modal_store').serialize(),
         beforeSend: function() {
             $('#button-add-store').button('loading');
         },
         complete: function() {
             $('#button-add-store').button('reset');
         },
         success: function(json) {
             $('.alert-dismissible').remove();
             if (json['error']) {
                 $('#result').after('<div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> ' + json['error'] + '</div>');
             }
             if (json['success']) {
                 $('#result').after('<div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> ' + json['success'] + '</div>');
                 $('input[name=\'url\']').val('');
                 
             }
         }
     });
 });
 
 //--></script>  
