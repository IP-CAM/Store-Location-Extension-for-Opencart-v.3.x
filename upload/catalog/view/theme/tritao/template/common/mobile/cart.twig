 <div id="cart-mini" class="cart-mini mobile-offcanvas offcanvas-right">
      <div class="offcanvas-header"> 
          <div class=" menu-account float-left">
             {% if logged %}
           {{ text_logged }}
           {% else %}
               {{ text_welcome }}
           {% endif %}
         </div>
        <div class="btn-menu float-right"><a href="javascript:void(0);" class="btn-close"><i class="close-right"></i></a></div>
</div>
     {% if products or vouchers %}
     <table class="table table-striped">
        {% for product in products %}
        <tr>
          <td class="text-center">{% if product.thumb %} <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-thumbnail" /></a> {% endif %}</td>
          <td class="text-left"><a href="{{ product.href }}">{{ product.name }}</a> {% if product.option %}
            {% for option in product.option %} <br />
            - <small>{{ option.name }} {{ option.value }}</small> {% endfor %}
            {% endif %}
            {% if product.recurring %} <br />
            - <small>{{ text_recurring }} {{ product.recurring }}</small> {% endif %}</td>
          <td class="text-right">x {{ product.quantity }}</td>
          <td class="text-right">{{ product.total }}</td>
          <td class="text-center"><button type="button" onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" class="btn btn-danger btn-xs"><i class="fa fa-times"></i></button></td>
        </tr>
        {% endfor %}
        {% for voucher in vouchers %}
        <tr>
          <td class="text-center"></td>
          <td class="text-left">{{ voucher.description }}</td>
          <td class="text-right">x&nbsp;1</td>
          <td class="text-right">{{ voucher.amount }}</td>
          <td class="text-center text-danger"><button type="button" onclick="voucher.remove('{{ voucher.key }}');" title="{{ button_remove }}" class="btn btn-danger btn-xs"><i class="fa fa-times"></i></button></td>
        </tr>
        {% endfor %}
      </table>
   
      <div id="cart-totals">
          {% for total in totals %}
          {% if (total['title'] != 'Sub-total') %}
          <p>
           <strong>{{ total.title }}</strong>
           <span> {{ total.text }}</span>
          </p>
          {% endif %}
          {% endfor %}
          {% if not error_warning %}
       <a href="{{ checkout }}" class="checkout"><i class="fa fa-share"></i> {{ text_checkout }}</a>
       {% endif %}
      </div>
      {% else %}
      <div class="empty-cart container"> 
      <h2 class="text-center empty">{{ text_empty }}</h2>
      <p>Para continuar comprando, navegue pelas categorias do site ou fa√ßa uma busca pelo seu produto.</p>
      <a href="/">Escolher produtos</a>
      </div>
      {% endif %}
  </div>

