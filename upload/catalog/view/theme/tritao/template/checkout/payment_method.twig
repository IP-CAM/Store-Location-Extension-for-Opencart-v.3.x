{% if error_warning %}
<div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
{% endif %}
{% if payment_methods %}
<p class="mb-2 mr-0 ml-0 mt-1">{{ text_payment_method }}</p>
{% for payment_method in payment_methods %}
    <div class="custom-control custom-radio">
 {% if payment_method.code == code or not code %}
    {% set code = payment_method.code %}
    <input type="radio" id="{{ payment_method.code }}" name="payment_method" value="{{ payment_method.code }}" checked="checked" class="custom-control-input" />
  <label class="custom-control-label" for="{{ payment_method.code }}">  {{ payment_method.title }}
    {% if payment_method.terms %}
    ({{ payment_method.terms }})
    {% endif %}</label>
    {% else %}
    <input type="radio" id="{{ payment_method.code }}" name="payment_method" value="{{ payment_method.code }}"  class="custom-control-input" />
   <label class="custom-control-label" for="{{ payment_method.code }}">  {{ payment_method.title }}
    {% if payment_method.terms %}
    ({{ payment_method.terms }})
    {% endif %}</label>

    {% endif %}
   
</div>


{% endfor %}
{% endif %}

